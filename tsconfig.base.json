{
  "include": [".react-router/types/**/*"],

  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@stock-app/source"],
    "baseUrl": "./apps/client",
    "rootDirs": ["./apps/client", "./.react-router/types"],
    "paths": {
      "@routes/*": [".react-router/types/app/routes/*"],
      "~/*": ["app/*"] // <-- only this is added locally
    }
  }
}
